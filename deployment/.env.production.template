# Production Environment Configuration for InnovanceOrbit
# Copy this file to .env.production and update with your actual values

# Application Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
# Replace with your actual database credentials
DATABASE_URL=postgresql://dbuser:your_secure_password@localhost:5432/innovanceorbit
PGHOST=localhost
PGPORT=5432
PGDATABASE=innovanceorbit
PGUSER=dbuser
PGPASSWORD=your_secure_password

# Gmail SMTP Configuration
# You need to create an App Password for Gmail
# 1. Enable 2FA on your Gmail account
# 2. Go to Google Account Settings > Security > App passwords
# 3. Generate an app password for "Mail"
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-gmail@gmail.com
SMTP_PASSWORD=your-16-character-app-password

# Session Security
# Generate a long random string for session secret
SESSION_SECRET=your-very-long-random-session-secret-min-32-characters

# Optional: Stripe Configuration (if using Stripe payments)
# Get these from your Stripe Dashboard
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Optional: Application URLs (if using custom domain)
BASE_URL=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Optional: File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/var/www/innovanceorbit/uploads

# Optional: Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/pm2/innovanceorbit-combined.log

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100